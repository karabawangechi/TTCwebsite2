    <main id="main">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-6">
            <div class="section-title text-center">
              <h2>Registration Form</h2>
            </div>
            <form action="/register" method="post" enctype="multipart/form-data" class="mt-5">
              <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" id="name" name="name" required class="form-control">
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" id="email" name="email" required class="form-control">
              </div>
              <div class="mb-3">
                <label for="admissionLetter" class="form-label">Letter of Admission (PDF):</label>
                <input type="file" id="admissionLetter" name="admissionLetter" accept="application/pdf" required class="form-control">
              </div>
              <div class="mb-3">
                <label for="nationalID" class="form-label">National ID (PDF):</label>
                <input type="file" id="nationalID" name="nationalID" accept="application/pdf" required class="form-control">
              </div>
              <div class="mb-3">
                <label for="kcseCertificate" class="form-label">KCSE Certificate (PDF):</label>
                <input type="file" id="kcseCertificate" name="kcseCertificate" accept="application/pdf" required class="form-control">
              </div>
              <div class="mb-3">
                <label for="leavingCertificate" class="form-label">Leaving Certificate (PDF):</label>
                <input type="file" id="leavingCertificate" name="leavingCertificate" accept="application/pdf" required class="form-control">
              </div>
              <div class="mb-3">
                <label for="birthCertificate" class="form-label">Birth Certificate (PDF):</label>
                <input type="file" id="birthCertificate" name="birthCertificate" accept="application/pdf" required class="form-control">
              </div>
              <div class="d-grid gap-2">
                <input type="submit" value="Submit" class="btn btn-primary">
              </div>
            </form>
          </div>
        </div>
      </div>
